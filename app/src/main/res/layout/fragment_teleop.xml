<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:animateLayoutChanges="true"
    app:layout_goneMarginLeft="10dp"
    tools:context=".TeleopFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grid"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/delete_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Delete Mode"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="25sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="right"
                        android:text="Top Row:"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:id="@+id/top_row_border"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_border"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/grid_padding">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/cone_top"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:contentDescription="CubeTop"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cone" />

                            <TextView
                                android:id="@+id/topConeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="8"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                        </FrameLayout>

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/grid_padding"
                            android:background="?android:attr/listDivider"
                            android:backgroundTint="@color/colorPrimary"
                            android:backgroundTintMode="src_over" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/cube_top"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:contentDescription="ConeTop"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cube" />

                            <TextView
                                android:id="@+id/topCubeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="8"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:gravity="right"
                        android:text="Middle Row:"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:id="@+id/mid_row_border"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_border"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/grid_padding">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/cone_mid"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:contentDescription="CubeMid"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cone" />

                            <TextView
                                android:id="@+id/midConeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="8"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                        </FrameLayout>

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/grid_padding"
                            android:background="?android:attr/listDivider"
                            android:backgroundTint="@color/colorPrimary"
                            android:backgroundTintMode="src_over" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/cube_mid"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:contentDescription="ConeMid"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cube" />

                            <TextView
                                android:id="@+id/midCubeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="8"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="Bottom Row:"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:id="@+id/bot_row_border"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_border"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/grid_padding">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/cone_bot"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:contentDescription="CubeBot"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cone" />

                            <TextView
                                android:id="@+id/botConeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="8"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                        </FrameLayout>

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/grid_padding"
                            android:background="?android:attr/listDivider"
                            android:backgroundTint="@color/colorPrimary"
                            android:backgroundTintMode="src_over" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/cube_bot"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:adjustViewBounds="true"
                                android:background="@null"
                                android:contentDescription="ConeBot"
                                android:scaleType="fitCenter"
                                android:src="@drawable/cube" />

                            <TextView
                                android:id="@+id/botCubeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="8"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bottom_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Defending"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/offence_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Change to Offence"/>

            </RelativeLayout>

            <include
                android:id="@+id/defence_table"
                android:visibility="visible"
                layout="@layout/defence_table" />

            <include
                android:id="@+id/offence_table"
                android:visibility="gone"
                layout="@layout/offence_table" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>