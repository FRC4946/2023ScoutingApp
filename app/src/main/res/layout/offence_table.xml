<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="1. Transport Time"
            android:textSize="@dimen/defending_table_text" />

        <Button
            android:id="@+id/transport_timer_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/timer_chip"
            android:layout_column="2"
            android:gravity="center"
            android:text="1:16"
            android:textColor="#000000"
            android:textSize="@dimen/defending_table_text"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="2. Loading Time"
            android:textSize="@dimen/defending_table_text" />

        <Button
            android:id="@+id/loading_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/timer_chip"
            android:layout_column="2"
            android:gravity="center"
            android:text="1:16"
            android:textColor="#000000"
            android:textSize="@dimen/defending_table_text"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="3. Transport Time"
            android:textSize="@dimen/defending_table_text" />

        <Button
            android:id="@+id/transport_timer_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/timer_chip"
            android:layout_column="2"
            android:gravity="center"
            android:text="1:16"
            android:textColor="#000000"
            android:textSize="@dimen/defending_table_text"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="4. Community Time"
            android:textSize="@dimen/defending_table_text" />

        <Button
            android:id="@+id/community_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/timer_chip"
            android:layout_column="2"
            android:gravity="center"
            android:text="1:16"
            android:textColor="#000000"
            android:textSize="@dimen/defending_table_text"/>

    </TableRow>

</TableLayout>